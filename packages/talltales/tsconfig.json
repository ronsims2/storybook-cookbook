{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "pretty": true,
    "jsx": "react-jsx",
    "isolatedModules": true
  },
  "exclude": ["types","dist","**/stories/*"]
}
